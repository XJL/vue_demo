border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

bg-img($name)
  display: inline-block
  background-repeat no-repeat
  background-image: url('./images/'+$name+'@3x.png')

